<?xml version="1.0" encoding="utf-8"?>
<com.autofit.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="109px"
    android:background="#5eff0000">

    <com.autofit.widget.View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#fff" />

    <com.autofit.widget.TextView
        android:id="@+id/item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25px"
        android:gravity="center_vertical"
        android:textColor="#2b2b2b"
        android:textSize="30px" />

    <com.autofit.widget.TextView
        android:id="@+id/item_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="23px"
        android:gravity="center_vertical"
        android:textColor="#757575"
        android:textSize="24px" />
</com.autofit.widget.RelativeLayout>



