<?xml version="1.0" encoding="utf-8"?>
<com.autofit.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="109px">


    <com.autofit.widget.TextView
        android:id="@+id/item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25px"
        android:gravity="center_vertical"
        android:textColor="#2b2b2b"
        android:textSize="30px" />

    <com.autofit.widget.ImageView
        android:id="@+id/item_icon"
        android:layout_width="28px"
        android:layout_height="32px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="88px"
        android:gravity="center_vertical"
        android:src="@drawable/ic_gz_zc"
        android:textSize="30px"
        android:visibility="invisible" />

    <com.autofit.widget.ProgressBar
        android:id="@+id/item_loading"
        android:layout_width="28px"
        android:layout_height="28px"
        android:layout_alignLeft="@id/item_icon"
        android:layout_centerVertical="true"
        android:indeterminateDrawable="@drawable/ani_loading"
        android:indeterminateDuration="1000" />


    <com.autofit.widget.TextView
        android:id="@+id/item_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="25px"
        android:gravity="center_vertical"
        android:textColor="@color/cl_detect_result"
        android:textSize="24px" />
</com.autofit.widget.RelativeLayout>



